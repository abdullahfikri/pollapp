<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bghasilvot"
    android:orientation="vertical"
    tools:context=".Activity.MenuHasilVotingActivity">
    <TextView
        android:layout_width="140dp"
        android:textSize="12sp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Sedang Berlangsung !"
        android:layout_marginLeft="29dp"
        android:textColor="#C6002F"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/bg3"
        android:orientation="vertical">

        <TextView
            android:layout_width="294dp"
            android:layout_height="21dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="8dp"
            android:text="Hasil Pemilihan Gubernur"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <ImageButton
            android:id="@+id/hasilvote_iv_tersedia"
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_tersedia"/>
    </LinearLayout>

    <TextView
        android:layout_width="103dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:text="segera !"
        android:layout_marginLeft="29dp"
        android:textColor="#C6002F"
        tools:ignore="SmallSp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/bg3">

        <TextView
            android:layout_width="294dp"
            android:layout_height="21dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:text="Hasil Pemilihan Walikota">

        </TextView>

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_tidaktersedia"
            android:layout_marginLeft="180dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_height="70dp"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:background="@drawable/bg3">

        <TextView
            android:layout_width="294dp"
            android:layout_height="21dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="14dp"
            android:text="Hasil Pemilihan Bupati">

        </TextView>

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_tidaktersedia"
            android:layout_marginLeft="200dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/bg_button">
        <ImageButton
            android:id="@+id/menuvote_ib_home"
            android:layout_marginTop="8dp"
            android:layout_marginStart="39dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_home"/>
        <ImageButton
            android:id="@+id/menuvote_ib_hasil"
            android:layout_marginTop="8dp"
            android:layout_marginStart="50dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_hasil_active"/>
        <ImageButton
            android:id="@+id/menuvote_ib_berita"
            android:layout_marginTop="8dp"
            android:layout_marginStart="50dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_berita"/>
        <ImageButton
            android:id="@+id/menuvote_ib_user"
            android:layout_marginTop="8dp"
            android:layout_marginStart="50dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_user"/>
    </LinearLayout>

</LinearLayout>