<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/kandidat_tv_ID"
            android:text="Id Kandidat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_baseline_android_24"
                android:id="@+id/iv_kandidat"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/kandidat_tv_nomor"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. 1"/>
                <TextView
                    android:id="@+id/kandidat_tv_cagub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="May Sra Handika"/>
                <TextView
                    android:id="@+id/kandidat_tv_wagub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sari Amanda"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/kandidat_btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info Calon"/>
        <Button
            android:id="@+id/kandidat_btn_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="select"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>