<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="@drawable/bgprofilecalon"
    tools:context=".Activity.HasilVoting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hasil Sementara"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pc_hasilvote"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_marginBottom="16dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="55dp"
            android:background="@drawable/bg_button"
            android:layout_marginTop="20dp">

            <ImageButton
                android:id="@+id/hasilvote_iv_home"
                android:layout_marginTop="8dp"
                android:layout_marginStart="39dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_home"/>
            <ImageButton
                android:id="@+id/hasilvote_iv_hasil"
                android:layout_marginTop="8dp"
                android:layout_marginStart="50dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_hasil_active"/>
            <ImageButton
                android:id="@+id/hasilvote_iv_berita"
                android:layout_marginTop="8dp"
                android:layout_marginStart="50dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_berita"/>
            <ImageButton
                android:id="@+id/hasilvote_iv_user"
                android:layout_marginTop="8dp"
                android:layout_marginStart="50dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_user"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>